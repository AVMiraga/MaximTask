@using MaximTask.Business.ViewModel
@model CreateServiceVm

<form method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="IconCode" class="form-label">Icon Tag</label>
        <input asp-for="IconCode" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>
    <div asp-validation-summary="All" class="text-danger">

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button asp-action="Index" class="btn btn-secondary">Cancel</button>
</form>